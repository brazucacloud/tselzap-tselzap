# TselZap Endpoint - Configuração de Ambiente

# Configurações do Servidor
PORT=3000
NODE_ENV=development

# Segurança
JWT_SECRET=tselzap-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# Banco de Dados
DB_PATH=./data/tselzap.db

# WebSocket
WS_PATH=/socket.io

# Logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# CORS
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Task Scheduler
TASK_DISTRIBUTION_TIME=0 6 * * *
TASK_TIMEOUT_MINUTES=30
DEVICE_CLEANUP_INTERVAL=30

# Timezone
TZ=America/Sao_Paulo

