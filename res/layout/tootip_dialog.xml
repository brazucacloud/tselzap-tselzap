<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/tooltip_dialog_content_view" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout android:id="@id/container" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <ImageView android:id="@id/tooltip_top_arrow" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/tooltip_dialog_triangle_up" />
        <LinearLayout android:id="@id/tooltip_dialog_box" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/tooltip_top_arrow" style="?toolTipDialog.dialogBoxStyle">
            <TextView android:id="@id/tooltip_subtitle" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/tooltip_dialog_line_vertical_margin_small" style="?toolTipDialog.subtitleTextStyle" />
            <TextView android:id="@id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" style="?toolTipDialog.titleTextStyle" />
            <TextView android:id="@id/tooltip_content" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/tooltip_dialog_line_vertical_margin_small" style="?toolTipDialog.bodyTextStyle" />
        </LinearLayout>
        <ImageView android:id="@id/bottom_arrow" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@id/tooltip_dialog_box" app:srcCompat="@drawable/tooltip_dialog_triangle_down" />
    </RelativeLayout>
</RelativeLayout>